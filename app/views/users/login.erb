<h3>Log in to start sharing.</h3>


<%= form_for(@user) do |u| %>

  <div class="form-group">
    <%= u.label :username %><br>
    <%= u.text_field :username, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= u.label :password %><br>
    <%= u.text_area :password, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= u.submit class:'btn btn-default' %>
  </div>

<% end %>